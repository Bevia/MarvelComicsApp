<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewComic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_comic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewTitleComic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_comic"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="lasdjfañsdasfkljdsfñlkadfjsa"
            android:textColor="@color/text_primary_black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewIssueComic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitleComic"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="lasdjfañsdasfkljdsfñlkadfjsa"
            android:textColor="@color/text_secondary_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewPagesComic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewIssueComic"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:text="lasdjfañsdasfkljdsfñlkadfjsa"
            android:textColor="@color/text_secondary_black"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
